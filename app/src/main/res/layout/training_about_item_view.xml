<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/training_title"
            style="@style/CustomTextStyle14666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/common_padding_10"
            tools:text="标题标题标题标题标题" />

        <TextView
            android:id="@+id/training_content"
            style="@style/CustomTextStyle14666"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingBottom="@dimen/common_padding_10"
            android:paddingEnd="@dimen/common_padding_10"
            android:paddingTop="@dimen/common_padding_10"
            tools:text="toolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstoolstools" />
    </LinearLayout>

    <View
        android:id="@+id/training_underline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separate_line_height"
        android:background="@color/color_d1d0d3" />
</LinearLayout>