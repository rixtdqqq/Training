<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuyx.training.fragment.TrainingCollectionFragment">

    <View
        android:id="@+id/padding_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        tools:visibility="visible" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@mipmap/training_back"
        app:popupTheme="@style/AppToolbarPopup"
        app:theme="@style/AppToolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/training_collect"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_15"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/training_today_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="今天"
            android:textColor="@drawable/training_font_selector"
            android:textSize="@dimen/text_common_14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/training_week_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="本周"
            android:textColor="@drawable/training_font_selector"
            android:textSize="@dimen/text_common_14sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/training_month_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="本月"
            android:textColor="@drawable/training_font_selector"
            android:textSize="@dimen/text_common_14sp" />
    </RadioGroup>
</LinearLayout>
